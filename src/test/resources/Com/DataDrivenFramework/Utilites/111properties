log4j.rootLogger=INFO, console, file, errorFile
log4j.appender.console=org.apache.log4j.ConsoleAppender
log4j.appender.console.File=System.getProperty("user.dir")/console.logs
log4j.appender.console.layout=org.apache.log4j.PatternLayout
log4j.appender.console.layout.ConversionPattern=%-5p [%C]: %m%n
log4j.appender.console.encoding=UTF-8


log4j.appender.errorFile=org.apache.log4j.FileAppender
log4j.appender.errorFile.File=System.getProperty("user.dir")/errorFile.logs
log4j.appender.errorFile.layout=org.apache.log4j.PatternLayout
log4j.appender.errorFile.layout.ConversionPattern=%-5p [%C]: %m%n%n
log4j.appender.errorFile.Append=false
log4j.appender.errorFile.Threshold=ERROR
log4j.appender.errorFile.encoding=UTF-8


log4j.appender.file=org.apache.log4j.FileAppender
log4j.appender.file.File=System.getProperty("user.dir")/file.logs
log4j.appender.file.layout=org.apache.log4j.PatternLayout
log4j.appender.file.layout.ConversionPattern=%-5p [%C]: %m%n%n
log4j.appender.file.Append=false
log4j.appender.file.encoding=UTF-8


# Root logger option
# Direct log messages to a log file


